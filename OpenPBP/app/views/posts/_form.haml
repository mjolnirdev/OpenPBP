.media
  %figure.media-left.is-hidden-touch
    %p.image.is-128x128
      %img{src: "#{cloudfront_url(@post.character.portrait, :character)}"}
    %p.is-size-7.has-text-centered #{@post.character.name}
  .media-content
    = form_tag "#{url_builder(@campaign, @chapter, @scene)}/#{@post.pid}/edit" do
      .field
        %p.control
          = text_area_tag :post, class: "textarea", value: @post.post
      = submit_tag "Edit Post", class: "button is-primary"
      %a.button.is-danger{href: "#{url_builder(@campaign, @chapter, @scene)}/#{@post.pid}/delete"}(data-confirm="This action is permanent and irrevocable, are you sure?")
        Delete Post