- if @note.errors
  - @note.errors.full_messages.each do |msg|
    .notification.is-danger #{msg}
.field
  %label.label{for: "title"} Title:
  .control.has-icons-left.has-icons-right
    = text_field_tag :title, class: "input is-medium", id: "title", maxlength: "64", placeholder: "e.g. Your Important Note", value: @note.title
    %span.icon.is-small.is-left
      %i.fa.fa-header
.field
  %label.label{for: "slug"} URL Slug:
  .control.has-icons-left.has-icons-right
    = text_field_tag :slug, class: "input", id: "slug", maxlength: "64", placeholder: "e.g. your-important-note", value: @note.slug
    %span.icon.is-small.is-left
      %i.fa.fa-link
    %p.help Lowercase letters, numbers and dashes only.
.field
  %label.label{for: "note"} Note:
  .control.has-icons-left.has-icons-right
    = text_area_tag :note, class: "textarea", value: @note.note
.field
  %label.checkbox
    = check_box_tag :public_note, value: @note.public_note, checked: @note.public_note
    Public Note?