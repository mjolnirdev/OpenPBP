- if @scene
  %a.has-text-dark.dropdown-item{href: "#{url_builder(@campaign, @chapter, @scene)}/edit"}
    %span.icon.is-small
      %i.fa.fa-pencil-square
    %span Edit Scene
- elsif @chapter
  %a.has-text-dark.dropdown-item{href: "#{url_builder(@campaign, @chapter)}/edit"}
    %span.icon.is-small
      %i.fa.fa-pencil-square
    %span Edit Chapter
- elsif @campaign
  %a.has-text-dark.dropdown-item{href: "#{url_builder(@campaign)}/edit"}
    %span.icon.is-small
      %i.fa.fa-pencil-square
    %span Edit Campaign