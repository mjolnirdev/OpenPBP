- if @scene
  %a.has-text-danger.dropdown-item{href: "#{url_builder(@campaign, @chapter, @scene)}/delete"}(data-confirm="This action is permanent and irrevocable, are you sure?")
    %span.icon.is-small
      %i.fa.fa-times
    %span Delete Scene
