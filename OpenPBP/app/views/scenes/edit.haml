= partial 'scenes/scene_header'
= partial 'layouts/breadcrumb'
%section.section
  .container
    %h2.is-size-3.has-text-centered.title Editing #{@scene.title}
    .columns
      .column.is-4.is-offset-4
        .box
          = form_tag "#{url_builder(@campaign, @chapter, @scene)}/edit" do
            = partial 'scenes/form'
            = submit_tag "Edit Scene", class: "button is-primary is-medium"
= partial 'chat_messages/sidebar'
= partial 'notes/sidebar'              