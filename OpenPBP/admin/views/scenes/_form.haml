- error = @scene.errors.include?(:chapter_id)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :chapter_id, :class => 'control-label'
  .controls
    =f.text_field :chapter_id, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:chapter_id, :class => 'text-error') : pat(:example)
