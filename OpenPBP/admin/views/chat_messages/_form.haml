- error = @chat_message.errors.include?(:campaign_id)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :campaign_id, :class => 'control-label'
  .controls
    =f.text_field :campaign_id, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:campaign_id, :class => 'text-error') : pat(:example)
