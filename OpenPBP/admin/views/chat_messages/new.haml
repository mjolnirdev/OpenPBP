%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:chat_messages, :index)
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:chat_messages, :new)

.tabs-content
  = form_for :chat_message, url(:chat_messages, :create), :class => 'form-horizontal' do |f|
    =partial 'chat_messages/form', :locals => { :f => f }
