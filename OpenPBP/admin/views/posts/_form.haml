- error = @post.errors.include?(:pid)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :pid, :class => 'control-label'
  .controls
    =f.text_field :pid, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:pid, :class => 'text-error') : pat(:example)
