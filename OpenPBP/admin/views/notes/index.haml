%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:notes, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:notes, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon('check-square-o', pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon('square-o', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon('trash-o', pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:notes, :destroy_many), :method => :delete do
                      =hidden_field_tag :note_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:note, :id)
        %th.header= mat(:note, :nid)
        %th.header= mat(:note, :post_id)
        %th.header= mat(:note, :campaign_id)
        %th.header= mat(:note, :user_id)
        %th.header= mat(:note, :slug)
        %th.header= mat(:note, :title)
        %th.header= mat(:note, :note)
        %th.header= mat(:note, :public_note)
        %th.header= mat(:note, :created_at)
        %th.header= mat(:note, :updated_at)
        %th.header.list-row-action-header

    %tbody
      -@notes.each do |note|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'note_ids[]', :value => note.id, :class => 'list-selectable-checkbox'
          %td.list-column=note.id
          %td.list-column=note.nid
          %td.list-column=note.post_id
          %td.list-column=note.campaign_id
          %td.list-column=note.user_id
          %td.list-column=note.slug
          %td.list-column=note.title
          %td.list-column=note.note
          %td.list-column= note.public_note ? tag_icon(:ok) : tag_icon(:remove)
          %td.list-column=time_ago_in_words note.created_at
          %td.list-column=time_ago_in_words note.updated_at
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:notes, :edit, :id => note.id), :rel => :tooltip, :title => "#{pat(:edit)} note", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon('trash-o'), :rel => :tooltip, :title => "#{pat(:delete)} note", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "note")
                .popover-content
                  = form_tag url(:notes, :destroy, :id => note.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
